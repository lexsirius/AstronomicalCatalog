<Window x:Class="AstronomicalCatalog.UI.CheckLicense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstronomicalCatalog.UI"
        mc:Ignorable="d"
        Title="Проверка лицензии" Height="168" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="55" Margin="10,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"><Run Text="Добро пожаловать в программу "/><Run Text="AstroCat!"/><LineBreak/><Run Text="Чтобы начать ползоваться программой, необходимо проверить наличие лицензии."/></TextBlock>
        <Button x:Name="Check_Button" Content="Выбрать файл лицензии" HorizontalAlignment="Left" Height="24" Margin="10,96,0,0" VerticalAlignment="Top" Width="272" Click="Check_Button_Click"/>

    </Grid>
</Window>
